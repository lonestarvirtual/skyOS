<div id="alert-container">
  <% flash.each do |key, value| %>
    <% # Devise uses hackery with this key to pass thread safe information %>
    <% # we just need to dump the key so that users do not see a blank flash %>
    <% next if key == :timedout %>
      <div class="alert alert-<%= key %> mb-0 fade show" role="alert">
        <div class="container">
          <%= value %>

          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
  <% end %>
</div>
