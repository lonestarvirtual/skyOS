<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> mb-0 fade show" role="alert">
    <div class="container">
      <%= value %>

      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>
