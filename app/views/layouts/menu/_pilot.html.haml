- if pilot_signed_in?
  %li.nav-item.dropdown.pl-2
    %a.nav-link.dropdown-toggle#navbarDropdown{href: '#', role: 'button', 'data-toggle': 'dropdown', 'aria-haspopup': 'true', 'aria-expanded': 'false'}
      = image_tag current_pilot.gravatar_url, size: 20, class: 'p-0 m-0 mb-1'

    .dropdown-menu.dropdown-menu-right{'aria-labelledby': 'navbarDropdown'}
      .dropdown-item.font-weight-bold.small= current_pilot
      - if Setting.discord_link.present?
        %hr
        = link_to Setting.discord_link, class: 'dropdown-item' do
          %i.fab.fa-discord.mr-1
          Join Discord
      %hr
      = link_to 'Profile', edit_profile_path, class: 'dropdown-item'
      = link_to 'Sign out', destroy_pilot_session_path, method: :delete, class: 'dropdown-item'
