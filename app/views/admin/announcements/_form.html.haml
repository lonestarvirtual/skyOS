= simple_form_for [:admin, @announcement] do |f|
  .form-row
    .col-6
      = f.input :start_at, label: "Start (#{Time.now.zone})", order: [:month, :day, :year], use_short_month: true

  .form-row
    .col-6
      = f.input :end_at, label: "End (#{Time.now.zone})", order: [:month, :day, :year], use_short_month: true

  .form-row
    .col
      = f.input :title

  .form-row
    .col
      = f.input :body

  .field_with_errors
    .text-danger= f.error :base

  = f.submit "Save", class: "btn btn-success w-100"
