<%= content_for :section, 'Flight Schedule Administration' %>

<div class="container-fluid pt-2 pb-4">

  <div class="col-lg-12">
    <div class="card card-shadow">
      <div class="card-header">
        <div class="d-flex justify-content-between">
          <div class="pt-2">
            <h5>Flight Schedule</h5>
          </div>
          <div class="text-right pt-1">
            <%= search_form_for @q, url: admin_flights_path, class: 'form-inline' do |f| %>
              <%= f.label :airline, 'Airline', class: 'form-inline' %>
              <%= f.collection_select :airline_id_eq, Airline.all, :id, :name, {}, class: 'form-control form-control-sm form-inline ml-2' %>

              <%= f.label :flight, class: 'form-inline ml-1' %>
              <%= f.search_field :number_cont, class: 'form-control form-control-sm form-inline text-uppercase ml-2', maxlength: 4 %>

              <%= f.label :origin, 'Orig', class: 'form-inline ml-1' %>
              <%= f.search_field :orig_icao_cont, class: 'form-control form-control-sm form-inline text-uppercase ml-2', maxlength: 4 %>

              <%= f.label :dest, 'Dest', class: 'form-inline ml-1' %>
              <%= f.search_field :dest_icao_cont, class: 'form-control form-control-sm form-inline text-uppercase ml-2', maxlength: 4 %>
              <%= f.submit class: 'btn btn-sm btn-primary ml-2' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card-body p-0">
        <table class="table table-bordered p-0 mb-0">
          <thead class="thead-dark">
            <th scop="col">
              <%= sort_link(@q, :airline_name) %>
            </th>
            <th scope="col">
              <%= sort_link(@q, :number, 'Flight') %>
            </th>
            <th scope="col">
              <%= sort_link(@q, :orig_icao, 'Origin') %>
            </th>
            <th scope="col">
              <%= sort_link(@q, :dest_icao, 'Destination') %>
            </th>
            <th scope="col">
              Departs
            </th>
            <th scope="col">
              Arrives
            </th>
            <th scope="col">
              <%= sort_link(@q, :equipment_short_name, 'Equipment') %>
            </th>
            <th scope="col" class="text-center">
              <%= link_to new_admin_flight_path, class: 'btn btn-sm btn-success' do %>
                <i class="fas fa-plus"></i> Add
              <% end %>
            </th>
          </thead>
          <tbody>
          <% if @flights.empty? %>
            <tr>
              <td colspan="20" class="text-muted text-center">None</td>
            </tr>
          <% end %>

          <% @flights.each do |flight| %>
            <tr>
              <th scope="row" width="160" class="text-center align-middle">
                <%= airline_logo(flight.airline) %>
              </th>
              <td class="align-middle">
                <%= "#{flight.number} Leg #{flight.leg}" %>
              </td>
              <td class="align-middle" data-toggle="tooltip" data-placement="bottom" title="<%= flight.orig.name %>">
                <%= flight.orig.to_s %>
              </td>
              <td class="align-middle" data-toggle="tooltip" data-placement="bottom" title="<%= flight.dest.name %>">
                <%= flight.dest.to_s %>
              </td>
              <td class="align-middle">
                <%= flight.out_time_local.strftime("%l:%M %P (%Z)") %>
              </td>
              <td class="align-middle">
                <%= flight.in_time_local.strftime("%l:%M %P (%Z)") %>
              </td>
              <td class="align-middle">
                <%= flight.equipment.short_name %>
              </td>
              <td class="text-center align-middle">
                <% if policy(flight).edit? || policy(flight).destroy? %>
                  <%= link_to edit_admin_flight_path(flight), class: 'btn btn-sm btn-outline-secondary' do %>
                    <i class="fas fa-edit"></i> Edit
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <div class="row justify-content-center mt-3">
          <%= paginate @flights, theme: 'twitter-bootstrap-4' %>
        </div>
      </div>
    </div>
  </div>
</div>
