= simple_form_for [:admin, @airport] do |f|
  .form-row
    .col
      = f.input :icao, label_html: { class: 'text-uppercase' }, input_html: { class: 'text-uppercase' }
    .col
      = f.input :iata, label_html: { class: 'text-uppercase' }, input_html: { class: 'text-uppercase' }

  .form-row
    .col
      = f.input :name, hint: 'Example: George Bush Intercontinental Airport'

  .form-row
    .col
      = f.input :city, hint: 'Domestic: City ST International: City Country'

  .form-row
    .col-3
      = f.input :latitude
    .col-3
      = f.input :longitude
    .col-6
      = f.input :time_zone, model: TZInfo::Timezone, include_blank: 'Set from Latitude/Longitude'

  .field_with_errors
    .text-danger= f.error :base

  = f.submit "Save", class: "btn btn-success w-100"
