<%= form_for [:admin, @network] do |f| %>
  <div class="form-row mt-2">
    <div class="col">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>

      <div class="invalid-feedback">
        Name <%= @network.errors[:name].join(", ") %>
      </div>
    </div>
  </div>

  <%- if @network.errors[:base].present? %>
    <div class="row mt-4 field_with_errors">
      <div class="ml-4 text-danger">
        <%= @network.errors[:base].join(", ") %>
      </div>
    </div>
  <% end %>

  <%= f.submit "Save", class: "btn btn-success mt-4 w-100" %>
<% end %>
