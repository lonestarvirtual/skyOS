<section class="pt-3 pb-3 mb-3 bg-dark text-light">
  <div class="container">
    <h3>Airline Administration</h3>
  </div>
</section>

<div class="container pt-2 pb-4">

  <div class="col-lg-12">
    <div class="card card-shadow">
      <div class="card-header">
        <h5>Airlines</h5>
      </div>

      <div class="card-body p-0">
        <table class="table table-bordered p-0 mb-0">
          <thead class="thead-dark">
            <th scope="col"></th>
            <th scope="col" class="text-uppercase">
              <%= sort_link(@q, :icao) %>
            </th>
            <th scope="col" class="text-uppercase">
              <%= sort_link(@q, :iata) %>
            </th>
            <th scope="col"><%= sort_link(@q, :name) %></th>
            <th scope="col" class="text-center">
              <%= link_to new_admin_airline_path, class: 'btn btn-sm btn-success' do %>
                <i class="fas fa-plus"></i> Add
              <% end %>
            </th>
          </thead>
          <tbody>
          <% if @airlines.empty? %>
            <tr>
              <td colspan="20" class="text-muted text-center">None</td>
            </tr>
          <% end %>

          <% @airlines.each do |airline| %>
            <tr>
              <th scope="row" width="160" class="text-center">
                <%= image_tag airline.logo.variant(resize_to_limit: [150, 25]) if airline.logo.attached? %>
              </th>
              <td><%= airline.icao %></td>
              <td><%= airline.iata %></td>
              <td><%= airline.name %></td>
              <td class="text-center">
                <% if policy(airline).edit? || policy(airline).destroy? %>
                  <%= link_to edit_admin_airline_path(airline), class: 'btn btn-sm btn-outline-secondary' do %>
                    <i class="fas fa-edit"></i> Edit
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <div class="row justify-content-center mt-3">
          <%= paginate @airlines, theme: 'twitter-bootstrap-4' %>
        </div>
      </div>
    </div>
  </div>
</div>
