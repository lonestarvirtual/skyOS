<%= content_for :section, 'Equipment Type Administration' %>

<div class="container pt-2 pb-4">

  <div class="col-lg-12">
    <div class="card card-shadow">
      <div class="card-header">
        <div class="d-flex justify-content-between">
          <div class="pt-2">
            <h5>Equipment Types</h5>
          </div>
          <div class="text-right pt-1">
            <%= search_form_for @q, url: admin_equipment_index_path, class: 'form-inline' do |f| %>
              <%= f.label :icao, class: 'form-inline text-uppercase' %>
              <%= f.search_field :icao_cont, class: 'form-control form-inline text-uppercase ml-2', maxlength: 4 %>
              <%= f.submit class: 'btn btn-sm btn-primary ml-2' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card-body p-0">
        <table class="table table-bordered p-0 mb-0">
          <thead class="thead-dark">
            <th scope="col">
              <%= sort_link(@q, :short_name) %>
            </th>
            <th scope="col" class="text-uppercase">
              <%= sort_link(@q, :icao) %>
            </th>
            <th scope="col" class="text-uppercase">
              <%= sort_link(@q, :iata) %>
            </th>
            <th scope="col">
              <%= sort_link(@q, :name) %>
            </th>
            <th scope="col" class="text-center">
              <%= link_to new_admin_equipment_path, class: 'btn btn-sm btn-success' do %>
                <i class="fas fa-plus"></i> Add
              <% end %>
            </th>
          </thead>
          <tbody>
          <% if @equipment.empty? %>
            <tr>
              <td colspan="20" class="text-muted text-center">None</td>
            </tr>
          <% end %>

          <% @equipment.each do |type| %>
            <tr>
              <td class="align-middle"><%= type.short_name %></td>
              <td class="align-middle"><%= type.icao %></td>
              <td class="align-middle"><%= type.iata %></td>
              <td class="align-middle"><%= type.name %></td>
              <td class="text-center align-middle">
                <% if policy(type).edit? || policy(type).destroy? %>
                  <%= link_to edit_admin_equipment_path(type), class: 'btn btn-sm btn-outline-secondary' do %>
                    <i class="fas fa-edit"></i> Edit
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <div class="row justify-content-center mt-3">
          <%= paginate @equipment, theme: 'twitter-bootstrap-4' %>
        </div>
      </div>
    </div>
  </div>
</div>
