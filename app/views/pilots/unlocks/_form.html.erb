<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row">
    <div class="col">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>

      <div class="invalid-feedback">
        Email <%= resource.errors[:email].join(", ") %>
      </div>
    </div>
  </div>

  <%= f.submit "Send unlock instructions", class: "btn btn-success mt-4 w-100" %>
<% end %>
